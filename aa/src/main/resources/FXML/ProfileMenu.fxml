<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../Style.css"
            fx:controller="view.ProfileMenu"
            prefHeight="420.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="24">
                <Label text="Profile Menu" fx:id="menuName"/>
                <Button text="Change profile" onMouseClicked="#enterChangeProfileMenu"/>
            </VBox>
            <Button text="Logout" onMouseClicked="#logout"/>
            <Button text="Delete account" onMouseClicked="#deleteAccount"/>
            <Button text="Back" onMouseClicked="#back"/>

        </VBox>
    </center>

</BorderPane>
